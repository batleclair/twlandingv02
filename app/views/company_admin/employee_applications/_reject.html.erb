<div class="tenant-modal" data-popup-target="window" data-action="click->popup#close" data-pop-up-id="2" data-active=<%=@rejection_error%>>
  <div>
    <div class="p-20 shadow-md" data-action="click->popup#keep">
      <div class="flex-center-between w-100">
        <h5 class="text-main fw-7">Refuser</h5>
        <%= link_to "", data: {action: "click->popup#close", popup_target: "close"} do %>
          <i class="fs-18 fa-solid fa-circle-xmark text-main"></i>
        <% end %>
      </div>
      <h6 class="mb-20">Informer <%= @employee_application.user.first_name %> des raisons du refus</h6>
      <%= simple_form_for(@employee_application, url: company_admin_employee_application_path(@employee_application), action: :update, data: {turbo: false}) do |f| %>
        <%= f.input :status, as: :hidden, input_html: {value: "rejected"} %>
        <div class="position-relative mb-30">
          <%= f.input :response_msg,
                      label: false,
                      wrapper: false,
                      placeholder: "Votre message de rÃ©ponse" %>
        </div>
        <button type="submit", class="w-100 button round bg-main-to-dark text-white bn-none">
          <i class="fa-regular fa-thumbs-down mr-10"></i>
          Rejeter la demande
        </button>
      <% end %>
    </div>
  </div>
</div>
