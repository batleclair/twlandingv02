<table class="max-w-400 mb-40">
  <tbody class="va-top">
    <tr>
      <th class="pr-10">👩‍💼</th>
      <th class="pr-10 no-wrap">Salarié.e :</th>
      <td><%= employee_application.user.full_name %></td>
    </tr>
    <tr>
      <th class="pr-10">💼</th>
      <th class="pr-10 no-wrap">Poste :</th>
      <td><%= employee_application.candidate.title %></td>
    </tr>
    <tr>
      <th class="pr-10">⏰</th>
      <th class="pr-10 no-wrap">Date de la demande :</th>
      <td><%= employee_application.created_at.strftime("%d/%m/%Y") %></td>
    </tr>
    <tr>
      <th class="pr-10">🗓</th>
      <th class="pr-10 no-wrap">Fenêtre demandée :</th>
      <td><%= employee_application.eligibility_period.title_and_dates %></td>
    </tr>
    <tr>
      <th class="pr-10">💬</th>
      <th class="pr-10 no-wrap">Message :</th>
      <td><%= employee_application.motivation_msg %></td>
    </tr>
  </tbody>
</table>
