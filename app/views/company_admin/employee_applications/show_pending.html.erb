<%= render partial: "company_admin/shared/demands_tabs" %>

<div class="d-flex">
  <%= render partial: "list", locals: {employee_applications: @employee_applications} %>
  <div>
    <div class="ml-40 w-100">
      <div class="w-100" data-controller="popup">
        <div class="mb-20">
          <h5 class="text-main mb-20 fw-6">Demande d'éligibilité en attente de réponse</h5>
          <%= render partial: "summary", locals: {employee_application: @employee_application}  %>
        </div>

        <div class="w-100 max-w-300 center-margin flex-center-between p-20">
          <%= link_to "Approuver","", class: "button w-100 bg-flag-3 mr-10 text-white", data: {pop_up_id: 1, action: "click->popup#open"} %>
          <%= link_to "Refuser","", class: "button w-100 bg-flag-2 ml-10 text-white", data: {pop_up_id: 2, action: "click->popup#open"} %>
        </div>

        <%= render partial: "accept" %>
        <%= render partial: "reject" %>

      </div>
    </div>
  </div>
</div>
