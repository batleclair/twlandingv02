    <%= simple_form_for(@user, url: company_admin_users_path, action: :create, data: {turbo: false}) do |f| %>

      <div class="d-flex justify-content-between">
        <%= link_to "Retour", company_admin_users_path, class:"button btn-light-main mb-2 me-2" %>
        <button type="submit" class="button btn-main-color">Enregistrer</button>
      </div>

      <div class="position-relative">
        <%= f.input :email,
                    label: "Email" %>
      </div>
      <div class="position-relative">
        <%= f.input :first_name,
                    label: "PrÃ©nom" %>
      </div>
      <div class="position-relative">
        <%= f.input :last_name,
                    label: "Nom" %>
      </div>

      <%= f.simple_fields_for :candidate, @candidate do |c| %>
        <%= c.input :function, collection: Offer::FUNCTIONS %>
        <%= c.input :title %>
        <%= c.input :status, as: :hidden, input_html: {value: Candidate::STATUSES[0]} %>
        <%= c.input :employer_name, as: :hidden, input_html: {value: current_user.company.name} %>
      <% end %>

      <%= f.simple_fields_for :employee_applications, @employee_application do |e| %>
        <%= e.input :status, as: :select, collection: [['Accepter', true]], include_blank: true %>
      <% end %>

    <% end %>
