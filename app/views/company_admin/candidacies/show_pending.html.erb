<div class="mb-20">
  <%= render partial: "tabs", locals: {candidacy: @candidacy_on_record} %>
</div>

<div class="d-flex">
  <%= render partial: "company_admin/candidacies/summary" %>
  <div class="ml-40 w-100 max-w-500">
    <div class="w-100" data-controller="popup">
      <div class="mb-20">
        <h5 class="text-main">Demande de Mission</h5>
        <p>Date de démarrage envisagée : <%= @candidacy.req_start_date %></p>
        <p>Estimation du nombre de jours requis : <%= @candidacy.req_days %> jours</p>
        <p>Périodicité envisagée : <%= @candidacy.req_periodicity %></p>
        <p>Contenu de la mission : <%= @candidacy.req_description %></p>
      </div>

      <div class="w-100 flex-center-between">
        <%= link_to "Approuver","", class: "button w-100 bg-flag-3 mr-10 text-white", data: {pop_up_id: 1, action: "click->popup#open"} %>
        <%= link_to "Rejeter","", class: "button w-100 bg-flag-2 ml-10 text-white", data: {pop_up_id: 2, action: "click->popup#open"} %>
      </div>

      <%= render partial: "company_admin/candidacies/accept" %>
      <%= render partial: "company_admin/candidacies/reject" %>

    </div>
  </div>
</div>
