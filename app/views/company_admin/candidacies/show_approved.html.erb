<div class="mb-20">
  <%= render partial: "tabs", locals: {candidacy: @candidacy_on_record} %>
</div>

<div class="d-flex">
  <%= render partial: "summary" %>
  <div class="ml-40 w-100 max-w-400">
    <div class="w-100">
      <div class="mb-20">
        <h5 class="text-main mb-10">Mission acceptée</h5>

        <table>
          <tbody>
            <tr>
              <th class="pr-20">Début</th>
              <td><%= @candidacy.req_start_date&.strftime("%d/%m/%Y") %></td>
            </tr>
            <tr>
              <th class="pr-20">Durée</th>
              <td><%= @candidacy.req_days %> jours</td>
            </tr>
            <tr>
              <th class="pr-20">Périodicité</th>
              <td><%= @candidacy.req_periodicity %></td>
            </tr>
            <tr>
              <th class="pr-20">Objet</th>
              <td><%= @candidacy.req_description %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <%= link_to @path, class: "w-100 button round bg-main-to-dark text-white bn-none" do %>
        <i class="fa-solid fa-eye mr-10"></i>
        Voir la mission associée
      <% end %>
    </div>
  </div>
</div>
