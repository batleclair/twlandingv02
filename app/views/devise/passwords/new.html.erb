
<div class="ctn-resp pe-0 bg-white pt-50">

  <div class="d-flex login-form-ctn full-height-ctn">

    <div class="pt-50 pb-50 flex-shrink-0">
      <div class="mb-20">
        <h1 class="fs-30 fw-6">Mot de passe oublié</h1>
        <div class="d-flex">
          <p class="me-1">Pas encore inscrit.e ?</p>
          <%= link_to "Créer un compte", new_registration_path(resource_name), class:"text-main fw-7" %>
        </div>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: {turbo: false}) do |f| %>
        <%= f.error_notification %>
        <div class="input-with-icon mb-20 position-relative">
          <%= f.input :email,
                      required: true,
                      label: "Adresse mail",
                      wrapper: false,
                      input_html: { autocomplete: "email" } %>
          <i class="fa-regular fa-envelope"></i>
        </div>

        <button type="submit" class="fat-btn fat-btn-md w-100 fat-btn-main-color position-relative flex-center-between">
          <span></span>
          <strong>Réinitialiser</strong>
          <i class="fa-solid fa-key round-button bg-white"></i>
        </button>

      <% end %>

    </div>

    <div class="bg-shade round-top-left login-img-ctn ml-50 flex-center w-100 sm-resp-hide p-20">
      <div>
        <%= image_tag('homepage.svg', class: "w-100 max-w-500") %>
      </div>
    </div>

  </div>
</div>
