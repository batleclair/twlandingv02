<div class="white-wrapper">
  <div class="ctn">
    <div class="flex-resp align-items-center mb-3">
      <%= link_to 'Accueil', :root, class: "button btn-light-flag" %>
    </div>

    <h1 class="mt-4 mb-4 text-main fs-4">RÃ©initialisation du mot de passe</h1>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions flex-resp flex-column align-items-end justify-content-end">
        <%= f.button :submit, "Modifier", class: "button btn-flag-color mb-3" %>
      </div>
    <% end %>

  </div>
</div>
