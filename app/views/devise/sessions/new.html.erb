<div class="ctn-resp-sheet sheet-pad white-bg">
  <div class="flex-resp align-items-center mb-3">
    <%= render "devise/shared/links" %>
  </div>

  <h4 class="mt-4 mb-4 primary-text-color">Connectez-vous pour candidater aux offres de nos partenaires</h4>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me,
                  label: "Se souvenir de vous",
                  as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions flex-resp flex-column align-items-end justify-content-end">
      <%= f.button :submit, "Connexion", class: "button btn-flag-color mb-3" %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "button btn-light-flag" %><br />
      <% end %>
    </div>
  <% end %>
</div>
