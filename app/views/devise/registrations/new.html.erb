<div class="ctn-resp pe-0 bg-white pt-50">

  <div class="d-flex login-form-ctn full-height-ctn">

    <div class="pt-50 pb-50 flex-shrink-0">
      <div class="mb-20">
        <h2>Créer un compte</h2>
        <div class="d-flex">
          <p class="me-1">Déjà inscrit.e ?</p>
          <%= link_to "Se connecter", new_session_path(resource_name), class:"text-main fw-7" %>
        </div>
      </div>

        <%= render partial: "devise/shared/google_sso" %>

        <div class="separator w-50 center-margin center-text mb-15">
          ou
        </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>

        <%= render partial: "signup", locals: {f: f} %>

        <div id="user_captcha" class="mb-20 position-relative">
          <p id="captcha_error" class="invalid-msg"></p>
        </div>

        <%= invisible_captcha :secret_question %>

        <button type="submit" class="fat-btn fat-btn-md w-100 fat-btn-main-color position-relative flex-center-between">
          <span></span>
          <strong>Inscription</strong>
          <i class="fa-solid fa-right-to-bracket round-button bg-white"></i>
        </button>
      <% end %>
    </div>

    <div class="bg-shade round-top-left login-img-ctn ml-50 flex-center w-100 sm-resp-hide p-20">
      <div>
        <%= image_tag('homepage.svg', class: "w-100 max-w-500") %>
      </div>
    </div>

  </div>
</div>
