<div class="modal-bg" data-modal-target="window" data-menu-target="window" data-action="click->modal#close">
  <div>
    <div class="d-flex justify-content-between form-header" data-action="click->modal#keep">
      <h5>Avant d'acc√©der √† ton profil...</h5>
      <h5><a href="" data-modal-target="close" data-action="click->modal#close"><i class="fa-solid fa-xmark"></i></a></h5>
    </div>
    <div class="modal-inner" data-action="click->modal#keep">
      <div class="modal-body">
      <h5 class="text-main bolder mb-3">Il nous manque quelques infos pour g√©n√©rer ton profil ü§ì</h5>
      <%= simple_form_for(current_user.candidate, action: :synch_update_min, data:{turbo: false, 'menu-target': 'form', action: 'submit->menu#save'}) do |f| %>
        <div>

          <div class="flex-resp align-items-center custom-label mb-3">
            <label for="candidate_birth_date" class="me-3 flex-width-150">Anniversaire :</label>
            <%= f.input :birth_date,
                        as: :date,
                        start_year: Date.today.year - 70,
                        end_year: Date.today.year - 18,
                        use_month_numbers: true,
                        order: [:day, :month, :year],
                        include_blank: true,
                        label: false,
                        wrapper_html: {class: 'full-width'} %>
          </div>

          <div class="flex-resp align-items-center custom-label mb-3">
            <label for="candidate_location" class="me-3 flex-width-150">Ville :</label>
            <%= f.input :location, label: false, wrapper_html: {class: 'full-width'} %>
          </div>

          <div class="flex-resp align-items-center custom-label mb-3">
            <label for="candidate_title" class="me-3 flex-width-150">Poste actuel :</label>
            <%= f.input :title, label: false, wrapper_html: {class: 'full-width'} %>
          </div>

          <div class="flex-resp align-items-center custom-label mb-3">
            <label for="candidate_function" class="me-3 flex-width-150">Domaine :</label>
            <%= f.input :function,
              collection: Candidate::FUNCTIONS,
              label: false,
              wrapper_html: {class: 'full-width'} %>
          </div>

          <div class="d-flex justify-content-end">
            <%= f.submit "Terminer", class: "button btn-flag-color" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
