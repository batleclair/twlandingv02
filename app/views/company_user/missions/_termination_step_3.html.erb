<div class="max-w-400">
  <%= simple_form_for(@mission, url: user_mission_path(@mission, step:3), data: {turbo: false}) do |f| %>

    <div class="mb-20">
      <h5>Confirmer ✔️</h5>
      <p>Promis c'est la dernière étape !</p>
    </div>

    <div class="mt-20 w-100 position-relative">
      <div class="position-relative">
        <%= f.input :termination_confirmation, label: "Je confirme vouloir clôturer la mission", input_html: {class: "toggle"} %>
      </div>
      <%= f.input :status, as: :hidden, input_html: {value: :terminated} %>
    </div>

    <div class="w-100 flex-center-between mb-40">
      <%= link_to "Retour", edit_user_mission_feedback_path(user_mission_id: @mission.id, id:@mission.feedback.id), class: "round bg-shade-to-dark text-main max-w-100 w-100 text-center pt-05 pb-05 hover-2" %>
      <button type="submit" class="round bg-main-to-dark text-white bn-none max-w-100 w-100 text-center pt-05 pb-05 hover-2">Terminer</button>
    </div>

  <% end %>
</div>
