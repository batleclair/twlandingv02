<h5 class="fw-7 text-main mb-30">Candidatures</h5>

<div class="d-flex">
  <%= render partial: "summary" %>
  <div class="ml-40 w-100 max-w-400">
    <div class="w-100">

      <div class="mb-20">
        <h6 class="text-main mb-10 fw-7">Vos messages</h6>
        <%= render partial: "messages" %>
      </div>

      <div class="mb-40">
        <h6 class="text-main mb-10 fw-7">Et maintenant ?</h6>
        <%= render partial: "notice" %>
      </div>

      <%= link_to user_mission_path(@candidacy.mission), class: "w-100 button round bg-main-to-dark text-white bn-none" do %>
        <i class="fa-solid fa-eye mr-10"></i>
        Suivre l'avancement de la mission
      <% end %>
    </div>
  </div>
</div>
