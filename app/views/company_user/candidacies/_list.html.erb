<div class="w-100 max-w-400">
  <% @candidacies.each do |c| %>
    <div class="w-100 p-10 bg-shade mb-10">
      <%= link_to user_candidacy_path(c), class: "w-100 h-100" do %>
        <div class="flex-center-left w-100">
          <div class="mr-10 bg-white round-20 square-80 logo-box flex-shrink-0">
            <%= cl_image_tag(c.beneficiary.logo.key) %>
          </div>
          <div class="pe-none w-100">
            <h6><%= c.offer.beneficiary.name %></h6>
            <p><%= c.offer.title %></p>
            <% case %>
            <% when c.being_assessed? %>
              <p class="fw-4 fs-13"><i class="fa-solid fa-forward-step text-main-light mr-10"></i>En phase de discussions</p>
            <% when c.being_validated? %>
              <p class="fw-4 fs-13"><i class="fa-solid fa-forward-fast text-main mr-10"></i>En phase de validation</p>
            <% when c.validated? %>
              <p class="fw-4 fs-13"><i class="fa-solid fa-circle-check text-flag-3 mr-10"></i>Mission valid√©e</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
