              <%= simple_form_for(args, url: url, method: method) do |f| %>
                <%= f.input :last_active_status, as: :hidden, input_html: {value: "selection"} %>
                <%= f.input :active, as: :hidden, input_html: {value: status} %>
                <%= f.submit label %>
              <% end %>
            <% end %>

            <% if current_user.last_employee_application&.approved? %>
              <%= simple_form_for(args, url: url) do |f| %>
                <%= f.input :motivation_msg %>
                <%= f.input :last_active_status, as: :hidden, input_html: {value: "user_application"} %>
                <%= f.submit %>
              <% end %>
            <% end %>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
