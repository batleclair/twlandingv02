<div class="d-flex" data-controller="display">
  <%= render partial: "company_user/missions/list", locals: {missions: @missions} %>
  <div class="ml-40">
    <%= render partial: "calendar" %>
    <div class="flex-center-between">
      <div>
        <h6><%= @timesheet.start_time.strftime("%d-%m-%Y") %></h6>
        <p><%= @timesheet.start_time.strftime("%H:%M") %> -> <%= @timesheet.end_time.strftime("%H:%M") %> (<%= @timesheet.reported_hours %> heures)</p>
        <p>Commentaire : <%= @timesheet.comment.blank? ? "Aucun commentaire" : @timesheet.comment %></p>
      </div>
      <div>
        <%= link_to edit_user_mission_timesheet_path(id: @timesheet.id) do %>
          <i class="fa-solid fa-pen-to-square round-button btn-round-cta"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
