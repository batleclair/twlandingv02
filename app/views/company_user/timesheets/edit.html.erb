<div class="mb-20">
  <%= render partial: "company_user/missions/tabs" %>
</div>


<div class="d-flex">
  <%= render partial: "calendar" %>
  <div class="max-w-400 ml-40">
    <div class="mb-30 flex-between">
      <div>
        <h4 class="text-main fw-7 mb-10">Modifier ?</h5>
        <p>Vous pouvez encore modifier les informations saisies pour cette date.</p>
      </div>
      <%= link_to :back do %>
        <i class="fa-solid fa-xmark close-btn-alt square-30 flex-center"></i>
      <% end %>
    </div>

    <%= render partial: "form", locals: {date: @timesheet.start_time.to_date, url: user_mission_timesheet_path(id: @timesheet.id), deletable: true} %>
  </div>
</div>
