<%= simple_form_for([@mission, @timesheet], url: url) do |f| %>
  <div data-controller="dual-slider" data-dual-slider-date-value=<%= date %>>
    <div class="dual-slider mb-20">
      <%= range_field_tag :start, 9, min: 8, max: 20, step: 0.5, data: {dual_slider_target: "start", action: "input->dual-slider#update"}  %>
      <%= range_field_tag :end, 18, min: 8, max: 20, step: 0.5, data: {dual_slider_target: "end", action: "input->dual-slider#update"}  %>
    </div>

    <div>
        <%= f.input :start_time, as: :string, input_html: {data: {dual_slider_target: "startinput"}} %>
        <%= f.input :end_time, as: :string, input_html: {data: {dual_slider_target: "endinput"}} %>
        <%= f.input :comment %>

    </div>

  </div>
  <button type="submit", class="w-100 button round first-main-border bg-white-to-shade text-main">
    <i class="fa-solid fa-floppy-disk mr-10"></i>
    Enregistrer les informations saisies
  </button>
<% end %>

<% if deletable %>
  <div class="w-100 flex-center mt-60 mb-40">
    <%= link_to "Supprimer ces temps ?", user_mission_timesheet_path(id: @timesheet.id), class: "button text-flag-2 fw-6", data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr.e de vouloir supprimer ?"} %>
  </div>
<% end %>
