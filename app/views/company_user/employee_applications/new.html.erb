<h2 class="mb-50">Je fais ma demande aux RH</h2>
<div class="max-w-500">
  <%= simple_form_for(@employee_application, url: user_employee_applications_path) do |f| %>
    <div class="position-relative">
      <%= f.input :eligibility_period_id, collection: @eligibility_periods %>
      <div class="position-relative">
        <%= f.input :motivation_msg,
                    label: "Message" %>
      </div>
      <%= f.error :candidate_id, id: "candidate_id_error", class:"invalid-msg" %>
    </div>

    <div class="flex-center-between">
      <%= link_to "Annuler", root_path, class:"button btn-light-main mb-2 me-2" %>
      <button type="submit" class="button btn-main-color">Envoyer ma demande</button>
    </div>

  <% end %>
</div>
