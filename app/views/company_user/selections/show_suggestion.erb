<div class="mb-20">
  <%= render partial: "company_user/selections/tabs", locals: {selection: @selection_on_record} %>
</div>

<div class="d-flex">
  <%= render partial: "company_user/selections/summary" %>
  <div class="ml-40 w-100 max-w-400">
    <div class="w-100">
      <div class="mb-20">
        <h5 class="text-main">Proposition</h5>
        <p>Une mission vous a été suggérée par <span class="text-main fw-5"><%= @selection.company_admin_origin? ? "votre entreprise" : "Demain" %></span>.</p>
        <% if current_user.eligibility_on_going? && !@active_engagement %>
          <p class="mb-20">Vous êtes invité.e à y répondre</p>
          <h5 class="center-text text-main mb-20">Souhaitez-vous candidater ?</h5>
          <%= simple_form_for(@selection, url: user_selection_path(@selection), data: {turbo: false}) do |f| %>

            <div class="xl-radio-btns position-relative max-w-200 center-margin">
              <%= f.collection_radio_buttons :status, [["Oui", "user_application"], ["Non", "selection"]], :last, :first do |b|
                b.radio_button(checked: false, class: (b.value == "user_application" ? 'flag-3-radio' : 'flag-2-radio' ))  + b.label
              end %>
              <%= f.error :status, class: "invalid-msg" %>
            </div>

            <%= f.input :active, as: :hidden, input_html: {value: false} %>

            <div class="position-relative mb-20">
              <%= f.input :motivation_msg, wrapper: false, placeholder: "Votre message à l'attention de #{@selection.beneficiary.name}", input_html:{class:"min-h-100"} %>
            </div>
            <button type="submit" class="btn-main-color round-10 text-white square-40 w-100 flex-center">
              <i class="fa-regular fa-paper-plane mr-10"></i>
              Envoyer
            </button>
          <% end %>
        <% else %>
          <% if @active_engagement %>
            <p class="mt-20 mb-20">Vous ne pouvez pas y candidater actuellement en raison de votre engagement en cours sur la mission suivante :</p>
            <div class="w-100 flex-center">
              <%= render partial: "company_user/shared/engagement_card" %>
            </div>
          <% else %>
            <p class=" mt-20 mb-10">Vous ne pouvez pas y candidater actuellement.</p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
