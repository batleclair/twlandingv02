<div class="mb-20">
  <%= render partial: "company_user/missions/tabs" %>
</div>

<div class="max-w-500">
  <div class="mb-40">
    <h4 class="text-main fw-7 mb-20">Vous souhaitez clÃ´turer cette mission</h4>
    <h6><%= @mission.beneficiary.name %></h6>
    <p><%= @mission.title %></p>
  </div>

  <div class="max-w-400">
    <%= simple_form_for([@mission, @feedback], url: user_mission_feedback_path(mission_id: @mission.id, id: @feedback.id)) do |f| %>
      <div class="w-100 flex-center-between mb-40">
        <%= link_to "<", user_mission_confirmation_path(step: 2), class: "round-button-sm bg-shade-dark text-main fw-7 p-20 fs-20" %>
        <button type="submit" class="round-button-sm bg-shade-dark text-main fw-7 p-20 fs-20">></button>
      </div>

      <h5>Faites nous part de vos retours ğŸ˜Š</h5>

      <% @feedback.answers.each do |answer| %>
        <%= f.simple_fields_for :answers, answer do |a| %>
          <% case answer.question.input_type %>
          <% when "integer" %>
            <%= a.input :integer_answer, label: answer.question.title %>
          <% when "text" %>
            <%= a.input :text_answer, label: answer.question.title %>
          <% when "boolean" %>
            <%= a.input :boolean_answer, label: answer.question.title %>
          <% end %>
        <% end %>
      <% end %>




    <% end %>
  </div>

</div>
