<div data-experience-target="list" class="full-width mb-2">
  <% experiences.each do |xp| %>
    <div class="d-flex justify-content-between mb-2">
      <div class="d-flex align-items-center justify-content-between full-width">
        <div class="flex-resp align-items-center flex-grow-1">
          <h6 class="me-4 set-width-150"><%= xp.employer %>: </h6>
          <div>
            <p><%= xp.title %></p>
            <div class="d-flex align-items-center">
              <% if xp.end_date.present? %>
                <p class="me-2 sm-thin-text">(<%= xp.start_date_output %></p>
                <i class="fa-solid fa-arrow-right-long me-2 primary-text-color"></i>
                <p class="sm-thin-text"><%= xp.end_date_output %>)</p>
              <% else %>
                <p class="me-2 sm-thin-text">depuis <%= xp.start_date_output %></p>
              <% end %>
            </div>
          </div>
        </div>
        <div class="d-flex">
          <%= link_to experience_select_path(xp), data: {action: 'click->experience#popup', id: xp.id} do %>
            <i class="fa-solid fa-pen-to-square primary-text-color me-2"></i>
          <% end %>
          <%= link_to experience_path(xp), data: { method: :delete, turbo:  false, action: 'click->experience#destroy'} do %>
            <i class="fa-solid fa-trash primary-text-color"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
