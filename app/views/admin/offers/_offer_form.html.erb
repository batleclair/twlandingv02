  <div class="navpan-white-ctn">
    <%= simple_form_for(offer, url: url, action: action) do |f| %>

      <div class="sticky-admin-nav d-flex bg-white pt-3 pb-3 justify-content-between">
        <div class="d-flex">
          <%= link_to "Retour", admin_offers_path, class:"button btn-light-main mb-2 me-2" %>
          <%= link_to "Ajouter un bénéficiaire", new_admin_beneficiary_path, class:"button ms-2" %>
        </div>
        <button type="submit" class="button btn-main-color">Enregistrer</button>
      </div>

      <div class="d-flex">
        <%= f.association :beneficiary, wrapper_html: {class: "me-3 full-width position-relative"} %>
        <%= f.input :function, collection: Offer::FUNCTIONS, wrapper_html: {class: "full-width position-relative"} %>
      </div>

      <div class="d-flex">
        <%= f.input :title, wrapper_html: {class: "me-3 full-width position-relative"} %>
        <%= f.input :location, wrapper_html: {class: "full-width position-relative"} %>
      </div>

      <div class="d-flex">
        <%= f.input :region, collection: Offer::REGIONS, wrapper_html: {class: "me-3 full-width position-relative"}  %>
        <div class="full-width align-self-center pt-3 bg-shade">
          <%= f.input :remote_work, as: :boolean, label: "100% remote possible ?", input_html: { class: "toggle" }, wrapper_html: { class: "div-align position-relative ps-3 me-3 position-relative" }, label_html: {class: "text-main fw-6"} %>
        </div>
      </div>

      <div class="d-flex mb-3">
        <div class="p-3 me-3 grey-border full-width">
          <h6>Fréquence (1/2 journées)</h6>
          <div class="d-flex me-3">
            <%= f.input :half_days_min, label: "min", wrapper_html: {class: "me-3 full-width position-relative"} %>
            <%= f.input :half_days_max, label: "max", wrapper_html: {class: "full-width position-relative"}  %>
          </div>
        </div>
        <div class="p-3 grey-border full-width">
          <h6>Durée (mois)</h6>
          <div class="d-flex me-3">
            <%= f.input :months_min, label: "min", wrapper_html: {class: "me-3 full-width position-relative"} %>
            <%= f.input :months_max, label: "max", wrapper_html: {class: "full-width position-relative"}  %>
          </div>
        </div>
      </div>

      <div class="d-flex">
        <%= f.input :commitment, collection: Offer::COMMITMENTS, wrapper_html: {class: "me-3 full-width position-relative"} %>
        <%= f.input :offer_type, collection: Offer::OFFER_TYPES, wrapper_html: {class: "full-width position-relative"} %>
      </div>

      <div class="d-flex">
        <%= f.input :status, collection: Offer::STATUSES, wrapper_html: {class: "me-3 full-width"}  %>
        <div class="full-width align-self-center pt-3 bg-shade">
          <%= f.input :publish, as: :boolean, label: "Publier", input_html: { class: "toggle" }, wrapper_html: { class: "div-align position-relative ps-3 me-3 position-relative" }, label_html: {class: "text-main fw-6"} %>
        </div>
      </div>

      <%= f.input :summary, as: :rich_text_area %>

      <%= f.input :description, as: :rich_text_area %>

    <% end %>

  </div>
