<%= render partial: "shared/navpan", locals: {active: 5} %>

<div class="navpan-mg-ctn">
  <div class="navpan-transp-ctn">
  <h3>Liste des articles</h3>
  <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolor ex qui sapiente doloremque</p>
  </div>
  <div class="navpan-white-ctn">

    <div>
      <%= link_to "+ Créer", new_admin_post_path, class:"button btn-main-color mb-3" %>
      <table class="tw-table">
        <thead>
          <tr>
            <th>Date de création</th>
            <th>Titre</th>
            <th class="center-text">Publié ?</th>
            <th class="center-text">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |p| %>
            <tr>
              <td><%= p.created_at %></td>
              <td><%= p.title %></td>
              <td class="center-text">
                <% if p.publish %>
                  <i class="fa-solid fa-circle-check green-color"></i>
                <% else %>
                  <i class="fa-sharp fa-solid fa-circle-xmark grey-color"></i>
                <% end %>
              </td>
              <td>
                <div class="d-flex justify-content-evenly">
                  <%= link_to(article_path(title: p.title), target: "_blank") do %>
                    <i class="fa-solid fa-eye primary-text-color"></i>
                  <% end %>
                  <%= link_to edit_admin_post_path(p) do %>
                    <i class="fa-solid fa-pen-to-square primary-text-color"></i>
                  <% end %>
                  <%= link_to post_path(p), data: {turbo_method: :delete, turbo_confirm: "Sûr.e de vouloir supprimer ??"} do %>
                    <i class="fa-solid fa-trash primary-text-color"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>

  </div>
</div>
