<%= render partial: "shared/navpan", locals: {active: 3} %>

<div class="navpan-mg-ctn">
  <div class="navpan-transp-ctn">
    <div class="mb-20">
      <h3>Candidatures reçues</h3>
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolor ex qui sapiente doloremque</p>
    </div>
    <div class="d-flex">
      <%= link_to "Candidatures missions", admin_candidacies_path, class:"button-round btn-light-main no-wrap mr-20" %>
      <%= link_to "Demandes de salariés", admin_employee_applications_path, class:"button-round btn-light-main no-wrap" %>
    </div>
  </div>
  <div class="navpan-white-ctn">

  <div class="mb-20">
    <%= link_to "Proposer une mission", new_admin_candidacy_path, class: "button btn-main-color" %>
  </div>

    <div>
      <table class="tw-table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Association</th>
            <th>Offre</th>
            <th>Candidat</th>
            <th>Status</th>
            <th>Employeur</th>
            <th>Status</th>
            <th>Origine</th>
            <th class="center-text">Active ?</th>
            <th class="center-text">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @candidacies.each do |c| %>
            <tr>
              <td class="no-wrap"><%= c.created_at.strftime("%d-%m-%Y") %></td>
              <td><%= c.offer.beneficiary.name %></td>
              <td><%= c.offer.title %></td>
              <td><%= c.candidate.full_name %></td>
              <td><%= c.candidate.status %></td>
              <td><%= c.candidate.employer_name %></td>
              <td><%= c.last_active_status %></td>
              <td><%= c.origin %></td>
              <td>
                <div class="d-flex justify-content-center">
                  <% if c.active %>
                    <i class="fa-solid fa-circle-check green-color"></i>
                  <% else %>
                    <i class="fa-sharp fa-solid fa-circle-xmark grey-color"></i>
                  <% end %>
                </div>
              </td>
              <td>
                <div class="d-flex justify-content-evenly">
                  <%= link_to admin_candidacy_path(c) do %>
                    <i class="fa-solid fa-pen-to-square text-main"></i>
                  <% end %>
                  <%= link_to admin_candidacy_path(c), data: {turbo_method: :delete, turbo_confirm: "Sûr.e de vouloir supprimer ??"} do %>
                    <i class="fa-solid fa-trash text-main"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>

  </div>
</div>
