<div style="background-image: linear-gradient(45deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6)), url('<%= cl_image_path(@offer.beneficiary.photo.key) %>')" class="offer-banner">
  <div class="logo-box-lg mb-3">
    <%= cl_image_tag(@offer.beneficiary.logo.key) %>
  </div>
  <h2><%= @offer.title %></h2>
  <div class="offer-specs">
    <ul class="list-inline">
      <li>📍 Lieu : <%= @offer.location %></li>
      <li class="ps-3 pe-3">🕐 Fréquence : <%= @offer.half_days_min.fdiv(2).round(1) %> à <%= @offer.half_days_max.fdiv(2).round(1) %> j / sem</li>
      <li>📅 Durée : <%= @offer.months_min %> à <%= @offer.months_max %> mois</li>
    </ul>
  </div>
</div>


<div class="white-wrapper">
  <div class="d-flex">
    <div>
      <h4 class="mb-4"><span class="stress"><%= @offer.title %></span></h4>
      <%= @offer.description %>
    </div>
    <div class="fixed-size-box ms-5 sticky-cta">
      <%= link_to 'Postuler !', new_offer_candidacy_path(@offer), class:"button full-width btn-flag-color mb-3", "data-action": "click->modal#popup" %>
      <h5 class="text-center primary-text-color">Estimez l'impact sur votre salaire</h5>
      <h6 class="mt-3">Salaire brut mensuel actuel</h6>
      <p>placeholder</p>
      <h6 class="mt-3">Modalités d'engagement</h6>
      <p>placeholder</p>
      <p>placeholder</p>
      <a href="" class="button full-width btn-main-color mt-3">Simuler</a>
    </div>
  </div>
<%= link_to "Modifier l'offre", edit_offer_path(@offer), class: "button" %>
</div>

<%= render partial: "candidacy", locals: {offer: @offer, candidacy: @candidacy} %>
