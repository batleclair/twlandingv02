<div class="white-wrapper">
 <h1 class="center-text big-header-with-bg mt-5">Les jobs de <span class="stress">Demain</strong></h1>
  <div class="row">
    <% @offers.each do |offer| %>
      <% b_logo = offer.beneficiary.logo.attached? ? cl_image_tag(offer.beneficiary.logo.key) : image_tag('heart_globe.png') %>
      <div class="col-xxl-3 col-lg-4 col-md-6 col-sm-12 ps-4 pe-4 mt-5">
        <% if offer.active? %>
          <%= link_to offer_path(offer), class: "job-card" do %>
            <div class="job-card-tag">
            <h6>voir l'offre 🧐</h6>
              <div class="job-card-text">
                <h4><%= offer.title %></h4>
                <h6><%= offer.location %></h6>
              </div>
              <div class="job-card-footer">
                <h6>👊 <%= offer.beneficiary.cause %></h6>
                <div class="logo-box downsize90 card-logo-offset">
                  <%= b_logo %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class='upcoming-badge' data-controller="lock">
          <% action = user_signed_in? ? "click->modal#popup2" : "click->lock#unhide" %>
            <h6>à venir</h6>
            <span></span>
            <button data-lock-target="apply" class="button full-width btn-flag-color" data-action=<%=action%> data-id=<%=offer.id%>>Intéressé.e ?</button>
            <div class="d-none centered-overlay" data-lock-target="login">
              <div class="d-flex">
                <%= link_to "Connexion", new_user_session_path, class: "button full-width btn-main-color mb-1 me-2"%>
                <%= link_to "Inscription",  new_user_registration_path, class: "button full-width btn-light-main mb-1 ms-2"%>
              </div>
              <p class="center-text">connectez-vous pour candidater dès maintenant !</p>
            </div>
            <div class="job-card-text">
              <h4><%= offer.title %></h4>
              <h6><%= offer.location %></h6>
            </div>
            <div class="job-card-footer">
              <h6>👊 <%= offer.beneficiary.cause %></h6>
              <div class="logo-box downsize90 card-logo-offset">
                <%= image_tag('heart_globe.png') %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="col-xxl-3 col-lg-4 col-md-6 col-sm-12 ps-4 pe-4 mt-5">
      <div class="job-card-dark" data-controller="lock">
        <h1 class="center-text">+</h1>
        <h5 class="center-text">Le job fait pour toi</h5>
        <span class="d-flex flex-column justify-content-center align-items-center p-2">
          <% action = user_signed_in? ? "click->modal#popup2" : "click->lock#unhide" %>
          <h6 class="white-text center-text mb-2">Tu ne trouves pas le job qui te correspond ? Laisse-nous trouver pour toi !</h6>

          <% if user_signed_in? %>
            <% if @no_offer.candidates.where(user_id: current_user.id).none? %>
              <button data-lock-target="apply" class="button btn-flag-color" data-action=<%=action%> data-id=<%=@no_offer.id%>>Candidater !</button>
            <% else %>
              <h5 class="white-text center-text primary-text-color mb-4 mt-2">Votre candidature a bien été prise en compte 🙌</h5>
            <% end %>
          <% else %>
            <button data-lock-target="apply" class="button btn-flag-color" data-action=<%=action%> data-id=<%=@no_offer.id%>>Candidater !</button>
            <div class="d-none centered-overlay" data-lock-target="login">
              <div class="d-flex justify-content-center">
                <%= link_to "Connexion", new_user_session_path, class: "button btn-main-color mb-1 me-2"%>
                <%= link_to "Inscription",  new_user_registration_path, class: "button btn-light-main mb-1 ms-2"%>
              </div>
            </div>
          <% end %>
        </span>
      </div>
    </div>
  </div>
</div>

<span data-modal-target="content"><%= render partial: "candidacy", locals: {offer: @offers.last, candidacy: @candidacy} %></span>
